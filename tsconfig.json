{
    "compilerOptions": {
        "declaration": true,
        "outDir": "dist",
        "module": "ES6",
        // Modern browsers support all ES6 features, so ES6 is a good choice.
        "target": "es6",
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution":"node"
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
